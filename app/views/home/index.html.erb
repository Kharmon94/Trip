<!DOCTYPE html>
<html>
  <head>
    <title>Get There Map</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
  </head>
  <body>
    <form id="search">
      <div class="field_set">
        <label for="origin">Origin</label>
        <input id="origin" name="origin" value="NYC, NY" />
      </div>
      <div class="field_set">
        <label for="destination">Destination</label>
        <input id="destination" name="destination" value="San Diego, CA" />
      </div>
      <div class="field_set">
        <label for="mode">Mode</label>
        <select id="mode" name="mode">
          <option value="DRIVING">Driving</option>
          <option value="WALKING">Walking</option>
          <option value="TRANSIT">Transit</option>
          <option value="BICYCLING">Biking</option>
        </select>
      </div>
      <div class="field_set">
        <input type="submit" value="Search" />
      </div>
    </form>
    <div id="map"></div>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLEMAPSAPI'] %>"></script>
  </body>
</html>